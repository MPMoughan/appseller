<div class="container">
<h2 style="text-center"> Welcome to AppSeller! </h2>
<br>
<h3 style="text-center">
<%= link_to("Post an item to sale!", new_user_sale_path(@user)) %>
</h3>
<br>
</h3>
<div class="container">
  <div class="row">
    <div class="col-md-12" id="itemtable" >
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <!-- <th>sku #</th> -->
          <th>Price</th>

        </tr>
      </thead>
        <tbody>
          <% @items.each do |item| %>
          <tr>
            <td class="col-md-2"><%= item.name %></td>
            <td class="col-md-2"><%= item.description %></td>
            <td class="col-md-1">$<%= item.price %></td>
            <!-- <td class="col-md-1"><%# item.sku %></td> -->
            <td class="col-md-2"><img src="<%= item.file %>" alt="" height="200" width="200"></td>
            <td class="col-md-2"><%= link_to("view item", user_sale_path(@user, item.sale)) %></td>
          </tr>
          <% end %>
        </tbody>
    </table>
  </div>
</div>


</div>
<!-- close of the div -->





