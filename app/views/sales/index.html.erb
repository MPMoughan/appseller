<h1>Sales#index</h1>
<p>Find me in app/views/sales/index.html.erb</p>


<div class="container">
   <table>
        <thead>
          <tr>
            <th>Name</th>
            <th>Description</th>
            <th>sku #</th>
            <th>Price</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
          <tr>
            <td ><%= item.name %></td>
            <td ><%= item.description %></td>
            <td><%= item.price %></td>
            <td><%= item.sku %></td>
            <td><%= link_to("view item", user_sale_path(@user, item.sale)) %></td>

          </tr>
          <% end %>
        </tbody>
      </table>
</div>



