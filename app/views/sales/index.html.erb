<div class="container">
<h2> Welcome to AppSeller! </h2>


  <div class="table">
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>sku #</th>
          <th>Price</th>
        </tr>
      </thead>
        <tbody>
          <% @items.each do |item| %>
          <tr>
            <td ><%= item.name %></td>
            <td ><%= item.description %></td>
            <td>$ <%= item.price %></td>
            <td><%= item.sku %></td>
            <td><img src="<%= item.file %>" alt="" height="200" width="200"></td>
            <td><%= link_to("view item", user_sale_path(@user, item.sale)) %></td>
          </tr>
          <% end %>
        </tbody>
    </table>
  </div>

<%= link_to "list new item for sale", new_user_sale_path %>

</div>
<!-- close of the div -->





